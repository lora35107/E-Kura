<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="CREATE ACCOUNT"
        android:backgroundTint="#000"
        android:layout_marginTop="440dp"
        android:textColor="#5aa69d"


        />

    <ImageView
        android:id="@+id/iv_register"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ekuraperfect" />

    <EditText
        android:id="@+id/edt_name_reg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your full name"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/edt_email_reg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Enter your email address"
        android:textColorHint="@color/black"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edt_pass_reg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="Enter your password"
        android:textColorHint="@color/black"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txt_login_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have a account?Log in."
        android:layout_marginTop="500dp"
        android:textStyle="bold"
        android:textColor="#5aa69d"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>